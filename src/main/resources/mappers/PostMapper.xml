<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ffaikrw.memo.post.dao.PostDAO">
	
	<insert id="insertPost" parameterType="map">
		
		insert into `post`
		(
			`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		value
		(
			#{userId}
			, #{subject}
			, #{content}
			, #{filePath}
			, now()
			, now()
		)
	
	</insert>
	
	<select id="selectPostList" parameterType="int" resultType="com.ffaikrw.memo.post.model.Post">
		
		select
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		from
			`post`
		where
			`userId` = #{userId}
		order by
			`id` desc
		
	</select>
	
	<select id="selectPost" parameterType="int" resultType="com.ffaikrw.memo.post.model.Post">
		
		select
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		from
			`post`
		where
			`id` = #{id}	
		
	</select>

</mapper>